    <script src="https://sdk.cashfree.com/js/v3/cashfree.js"></script>
    <script>
        // Tab switching
        document.querySelectorAll('.tab-item').forEach(tab => {
            tab.addEventListener('click', function () {
                const tabName = this.dataset.tab;

                document.querySelectorAll('.tab-item').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

                this.classList.add('active');
                document.querySelector(`[data-content="${tabName}"]`).classList.add('active');
            });
        });

        // UI Selection Helper
        function selectItem(element, type) {
            const container = type === 'bank' ? '#bankGrid' : '#walletGrid';
            document.querySelectorAll(`${container} > div`).forEach(el => el.classList.remove('selected'));
            element.classList.add('selected');
        }

        // CASHFREE INTEGRATION
        // Initialize Cashfree
        // Note: Mode should match what is set in backend
        // We can pass environment from backend to be sure
        const cashfreeMode = "<%= typeof cashfreeEnv !=='undefined' ? cashfreeEnv.toLowerCase() : 'sandbox' %>";
        const cashfree = Cashfree({
            mode: cashfreeMode === 'test' ? 'sandbox' : 'production'
        });

        // Generate UUIDv4 for Idempotency
        function uuidv4() {
            return ([1e7] + -1e3 + -4e3 + -8e3 + -1e11).replace(/[018]/g, c =>
                (c ^ crypto.getRandomValues(new Uint8Array(1))[0] & 15 >> c / 4).toString(16)
            );
        }

        async function startPayment(method) {
            const amount = "<%= typeof amount !=='undefined' ? amount : '299' %>";
            // Check if we have an existing idempotency key in session or generate new
            let idempotencyKey = sessionStorage.getItem('txn_idempotency_key');
            if (!idempotencyKey) {
                idempotencyKey = uuidv4();
                sessionStorage.setItem('txn_idempotency_key', idempotencyKey);
            }

            try {
                // 1. Create Order & Get Session
                const orderRes = await fetch('/payment/create-order', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        amount,
                        method,
                        idempotencyKey,
                        customerName: "User", // Can be dynamic
                        customerPhone: "9999999999",
                        customerEmail: "user@example.com"
                    })
                });
                const orderData = await orderRes.json();

                if (!orderData.success) {
                    alert('Error creating order: ' + orderData.message);
                    return;
                }

                // 2. Open Cashfree Checkout
                cashfree.checkout({
                    paymentSessionId: orderData.payment_session_id,
                    redirectTarget: "_self" // Redirect in same tab
                });

                // Clear idempotency key after successful launch (or keep until success page)
                // sessionStorage.removeItem('txn_idempotency_key');

            } catch (err) {
                console.error(err);
                alert('Something went wrong. Please try again.');
            }
        }
    </script>
