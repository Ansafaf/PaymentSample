<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Gateway - General Payment</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <div class="card">
            <div class="header">
                <h1>üí≥ Payment Gateway</h1>
                <p>Enter your payment details securely</p>
                <a href="/" style="font-size: 14px; color: #667eea; text-decoration: none;">‚Üê Back to Home</a>
            </div>

            <form id="paymentForm">
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter your full name" required>
                </div>

                <div class="form-group">
                    <label for="amount">Amount (‚Çπ)</label>
                    <input type="number" id="amount" name="amount" placeholder="Enter amount" min="1" step="0.01"
                        required>
                </div>



                <button type="submit" class="btn">
                    Proceed to Pay
                </button>
            </form>
        </div>
    </div>

    <script>
        const form = document.getElementById('paymentForm');

        form.addEventListener('submit', (e) => {
            e.preventDefault();

            // Get form data
            const name = document.getElementById('name').value;
            const amount = document.getElementById('amount').value;
            const orderId = `PAY${Date.now()}`;
            const description = `General Payment - ${name}`;

            // Store payment details in sessionStorage
            sessionStorage.setItem('paymentDetails', JSON.stringify({
                customerName: name,
                paymentType: 'general'
            }));

            // Redirect to payment gateway with query parameters
            window.location.href = `/payment-gateway?amount=${amount}&orderId=${orderId}&description=${encodeURIComponent(description)}&type=general`;
        });

    </script>
</body>

</html>